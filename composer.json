{
    "name": "ajmichels/note-script",
    "description": "A utility for note taking.",
    "keywords": ["utility", "notes", "productivity", "markdown"],
    "version": "0.2.1",
    "license": "GPL-2.0",
    "type": "project",
    "authors": [
        {
            "name": "AJ Michels",
            "email": "ajmichels.web@gmail.com",
            "homepage": "http://ajmichels.com",
            "role": "Developer"
        }
    ],
    "homepage": "http://ajmichels.github.io/note-script/",
    "support": {
        "issues": "https://github.com/ajmichels/note-script/issues",
        "wiki": "https://github.com/ajmichels/note-script/wiki",
        "source": "https://github.com/ajmichels/note-script/tarball/master",
        "rss": "https://github.com/ajmichels/note-script/master.atom"
    },
    "autoload": {
        "psr-4": {"NoteScript\\": "src/main/"}
    },
    "autoload-dev": {
        "psr-4": {"NoteScript\\": "src/tests/"}
    },
    "scripts": {
        "test": ["@lint", "@unit-test"],
        "ci-test": ["@ci-lint", "@ci-unit-test"],
        "unit-test": "vendor/bin/phpunit --colors=always src/tests",
        "ci-unit-test": "vendor/bin/phpunit src/tests",
        "lint": "vendor/bin/phpcs --standard=PSR2 --colors src bin/note",
        "ci-lint": "vendor/bin/phpcs --standard=PSR2 -n src bin/note"
    },
    "require": {
        "php": ">=5.6",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.2",
        "squizlabs/php_codesniffer": "^2.5"
    },
    "bin": [
        "bin/note"
    ]
}
