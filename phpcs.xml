<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">

    <arg name="colors" />

    <file>./src</file>
    <file>./bin/note</file>

    <rule ref="PSR2">
        <exclude name="PSR2.Classes.ClassDeclaration.CloseBraceAfterBody" />
    </rule>

    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>./src/tests/*</exclude-pattern>
    </rule>

</ruleset>
